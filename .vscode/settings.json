{
  "typescript.tsdk": "node_modules/typescript/lib",
  "typescript.enable": true,
  "typescript.preferences.importModuleSpecifier": "relative",
  "typescript.validate.enable": true,
  "typescript.preferences.includePackageJsonAutoImports": "on",
  // Disable TypeScript validation untuk auto-imports (akan di-handle oleh Nuxt)
  "typescript.preferences.useLabelDetailsInCompletionEntries": true,
  // Exclude .nuxt dari TypeScript checking
  "typescript.tsserver.exclude": ["**/.nuxt/**", "**/node_modules/**", "**/dist/**"],
  // ESLint settings
  "eslint.validate": ["javascript", "javascriptreact", "typescript", "typescriptreact", "vue"],
  "eslint.options": {
    "extensions": [".js", ".jsx", ".ts", ".tsx", ".vue"],
    "ignorePattern": [".nuxt/**", "dist/**", "node_modules/**"]
  },
  // Ignore .nuxt folder dari linting
  "eslint.workingDirectories": [
    {
      "pattern": "./**",
      "!pattern": "./.nuxt/**"
    }
  ],
  // Vue settings
  "vetur.validation.template": false,
  "vetur.validation.script": false,
  "volar.autoCompleteRefs": true,
  "volar.codeLens.pugTools": false,
  "volar.codeLens.scriptSetupTools": true,
  // ADD THIS LINE to prevent .js files from being generated from .ts files
  "typescript.compilerOptions": {
    "noEmit": true
  },
  // File associations
  "files.associations": {
    "*.vue": "vue"
  },
  // Exclude patterns untuk file explorer
  "files.exclude": {
    "**/.nuxt": false,
    "**/node_modules": true,
    "**/dist": true
  }
}
